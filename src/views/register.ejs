<%- include('shared/navbar.ejs') %>



    <div class="container text-center my-5">
        <div class="user my-3">
            <i class="far fa-edit user-icon"></i>
            <h4 class="login">Register</h4>
        </div>
        <div class="card p-5 w-50 m-auto">
            <form method="POST" action="/handleRegister">

                <input value="<%=  oldInputs[0]?.name%>" class="form-control" placeholder="Enter your Name" type="text"
                    name="name">
                <% if (errors.find(e=> e.path =='name')) { %>
                    <div class="alert alert-danger">
                        name is required
                    </div>
                    <% } %>
                        <input value="<%=  oldInputs[0]?.email%>" class="form-control my-2 "
                            placeholder="Enter your email" type="email" name="email">
                        <% if (errors.find(e=> e.path =='email')) { %>
                            <div class="alert alert-danger">
                                email is required
                            </div>
                            <% } %>
                                <input class="form-control  " placeholder="Enter your Password" type="password"
                                    name="password">
                                <% if (errors.find(e=> e.path =='password')) { %>
                                    <div class="alert alert-danger">
                                        password is required
                                    </div>
                                    <% } %>
                                        <input class="form-control  my-2" placeholder="Password Confirmation"
                                            type="password" name="PasswordConfirmation">
                                        <% if (errors.find(e=> e.path =='PasswordConfirmation')) { %>
                                            <div class="alert alert-danger">
                                                not match!!
                                            </div>
                                            <% } %>
                                                <button
                                                    class="btn btn-default-outline my-4 w-100 rounded">Register</button>
                                                <a class="btn btn-default-outline" href="/login">Login</a>
            </form>
        </div>
    </div>

    <%- include('shared/footer.ejs') %>