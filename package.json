{
  "name": "sara7a",
  "version": "1.0.0",
  "description": "",
  "author": "Ziad Hosny",
  "license": "ISC",
  "main": "backend/index.ts",
  "type": "module",
  "scripts": {
    "start": "ts-node --esm dist/index.js",
    "server": "nodemon --esm backend/index.ts",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "ts.check": "tsc --project tsconfig.json",
    "add-build-backend": "git add dist",
    "add-build-frontend": "cd frontend && git add build",
    "build-backend": "rimraf dist && cd backend && tsc",
    "build-frontend": "cd frontend && npm run build"
  },
  "pre-commit": [
    "build-backend",
    "add-build-backend",
    "build-frontend",
    "add-build-frontend"
  ],
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.3.2",
    "nodemailer": "^6.9.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "chalk": "^5.3.0",
    "nodemon": "^2.0.22",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}